<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/articles"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.facebook.shimmer.ShimmerFrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:duration="800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/articles"
        tools:showIn="@layout/article_list_fragment">

        <include
            android:id="@+id/grid_loading"
            layout="@layout/article_grid_loading" />

        <include
            android:id="@+id/list_loading"
            layout="@layout/article_list_loading" />

    </com.facebook.shimmer.ShimmerFrameLayout>



    <com.aliumujib.artic.views.emptyerrorstate.SimpleEmptyStateView
        android:id="@+id/emptyView"
        app:emptyStateImageSrc="@drawable/ic_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.aliumujib.artic.views.emptyerrorstate.SimpleEmptyStateView
        android:id="@+id/errorView"
        app:emptyStateImageSrc="@drawable/ic_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
